<!-- res/layout/activity_detail_products_men.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    android:padding="16dp"
    tools:context=".classify_product.phones.DetailProductsPhoneActivity">

    <ImageView
        android:id="@+id/ig_images_product_men"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/tv_type_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ig_images_product_men"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:text="Thể loại"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_name_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="185dp"
        android:text="Tên"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_price_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quantity_product_men"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingBottom="10dp"
        android:text="Giá"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_details_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_product_men"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:text="Mô tả"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_origin_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_details_product_men"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:text="Xuất sứ"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_material_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_origin_product_men"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:text="Nguyên vật liệu"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_quantity_product_men"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_material_product_men"
        android:paddingBottom="10dp"
        android:text="Số lượng còn lại"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_product_men"
        android:layout_marginStart="185dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/tv_rate_product_men"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#FFD700"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/tv_rate_product_men_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="Đánh giá"
            android:textColor="#FFD700"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_show_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quantity_product_men"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="146dp"
        android:backgroundTint="#F44336"
        android:text="Thêm vào giỏ hàng" />

    <Button
        android:id="@+id/btn_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="17dp"
        android:backgroundTint="#F44336"
        android:text="Đánh giá" />
</RelativeLayout>
