<!-- res/layout/activity_detail_products_men.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".classify_product.phones.DetailProductsPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_start"
            android:gravity="center"
            android:text="Chi tiết sản phẩm"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:orientation="horizontal">

            <ImageView
                android:background="@color/white"
                android:id="@+id/ig_images_product"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:src="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@color/white"
                    android:id="@+id/tv_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Tên"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/tv_rate_product"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:stepSize="1.0" />

                <TextView
                    android:id="@+id/tv_rate_product_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="-20dp"
                    android:text="Đánh giá"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Thể loại: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_type_product"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Thể loại"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:layout_margin="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_type_product"
                android:text="Mô tả:"
                android:textSize="20dp" />

            <TextView
                android:layout_margin="20dp"
                android:id="@+id/tv_details_product"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:paddingBottom="10dp"
                android:text="Mô tả"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Xuất xứ: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_origin_product"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Xuất xứ"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Nguyên vật liệu: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_material_product"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Nguyên vật liệu"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Số lượng còn lại: "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_quantity_product"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Số lượng còn lại"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="10dp"
                android:id="@+id/tv_price_product"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:text="Giá"
                android:textSize="25dp" />
            <Button
                android:textSize="20dp"
                android:layout_marginTop="-50dp"
                android:layout_gravity="end"
                android:id="@+id/btn_show_details"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:backgroundTint="#F44336"
                android:text="THÊM VÀO GIỎ HÀNG" />

            <Button
                android:layout_marginTop="-50dp"
                android:id="@+id/btn_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:text="Đánh giá" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
