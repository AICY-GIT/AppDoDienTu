<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    android:padding="16dp"
    tools:context=".classify_product.accessory.DetailAccessoryActivity">

    <ImageView
        android:id="@+id/ig_images_product_women"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/tv_type_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ig_images_product_women"
        android:layout_centerHorizontal="true"
        android:text="Thể loại" />

    <TextView
        android:id="@+id/tv_name_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_product_women"
        android:layout_centerHorizontal="true"
        android:text="Tên" />

    <TextView
        android:id="@+id/tv_price_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_product_women"
        android:layout_centerHorizontal="true"
        android:text="Giá" />

    <TextView
        android:id="@+id/tv_details_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price_product_women"
        android:layout_centerHorizontal="true"
        android:text="Chi tiết" />

    <TextView
        android:id="@+id/tv_origin_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_details_product_women"
        android:layout_centerHorizontal="true"
        android:text="Xuất sứ" />

    <TextView
        android:id="@+id/tv_material_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_origin_product_women"
        android:layout_centerHorizontal="true"
        android:text="Nguyên liệu" />

    <TextView
        android:id="@+id/tv_quantity_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_material_product_women"
        android:layout_centerHorizontal="true"
        android:text="Số lượng" />

    <TextView
        android:id="@+id/tv_rate_product_women"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quantity_product_women"
        android:layout_centerHorizontal="true"
        android:text="Đánh giá" />

    <Button
        android:id="@+id/btn_show_details2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_rate_product_women"
        android:layout_marginStart="100dp"
        android:onClick="goToCartActivity"
        android:text="Thêm vào giỏ hàng" />

    <Button
        android:id="@+id/btn_review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_show_details2"
        android:layout_centerInParent="true"
        android:text="Đánh giá" />
</RelativeLayout>