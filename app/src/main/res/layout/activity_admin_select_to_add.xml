<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classify_product.ClassifyActivity"
    android:background="#2196F3"
    android:gravity="center">

    <TextView
        android:id="@+id/btn_click_add_phone_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="#B8F679"
        android:gravity="center"
        android:text="Thêm điện thoại"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/btn_click_add_accessory_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="#FBED6D"
        android:gravity="center"
        android:text="Thêm phụ kiện"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_click_add_earphone_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="#F6B36B"
        android:gravity="center"
        android:text="Thêm tai nghe"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_click_add_watch_classify"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="#EF6868"
        android:gravity="center"
        android:text="Thêm đồng hồ"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>